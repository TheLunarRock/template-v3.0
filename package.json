{
  "name": "template-v3.0",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest --watch",
    "setup": "node scripts/setup.js",
    "setup:project": "node scripts/setup.js --full",
    "setup:quick": "node scripts/setup.js --quick",
    "check": "node scripts/check.js",
    "check:all": "node scripts/check.js",
    "check:boundaries": "node scripts/check-boundaries.js",
    "check:features": "node scripts/check-boundaries.js --verbose",
    "create:feature": "node scripts/create-feature.js",
    "validate:all": "pnpm check:boundaries && pnpm check && pnpm test && pnpm preflight",
    "dev:safe": "pnpm check:boundaries && next dev",
    "build:safe": "pnpm check:boundaries && next build",
    "fix:boundaries": "node scripts/check-boundaries.js --fix",
    "preflight": "node scripts/preflight.js",
    "predeploy": "node scripts/preflight.js",
    "analyze": "ANALYZE=true next build",
    "lint": "next lint",
    "typecheck": "tsc --noEmit"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "next": "14.2.31",
    "react": "^18",
    "react-dom": "^18",
    "@supabase/supabase-js": "^2.45.0",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@playwright/test": "^1.48.0",
    "playwright": "^1.48.0",
    "vitest": "^1.6.0",
    "@testing-library/react": "^14.3.0",
    "@testing-library/user-event": "^14.5.0",
    "@vitejs/plugin-react": "^4.3.0",
    "eslint": "^8",
    "eslint-config-next": "14.2.31",
    "@next/bundle-analyzer": "^14.2.31",
    "autoprefixer": "^10.4.19",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5"
  }
}