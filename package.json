{
  "name": "template-v3.0",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "test": "pnpm test:unit && pnpm test:e2e",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:headed": "playwright test --headed",
    "test:unit": "vitest",
    "test:unit:ui": "vitest --ui",
    "test:unit:watch": "vitest --watch",
    "setup": "node scripts/setup.js",
    "setup:project": "node scripts/setup.js --full",
    "setup:quick": "node scripts/setup.js --quick",
    "setup:sc": "node scripts/setup.js --sc-parallel",
    "check": "node scripts/check.js",
    "check:all": "node scripts/check.js",
    "check:sc": "node scripts/check.js --sc-analyze",
    "check:boundaries": "node scripts/check-boundaries.js",
    "check:features": "node scripts/check-boundaries.js --verbose",
    "create:feature": "node scripts/create-feature.js",
    "validate:all": "pnpm check:boundaries && pnpm typecheck && pnpm test && pnpm build",
    "dev:safe": "pnpm check:boundaries && next dev",
    "build:safe": "pnpm check:boundaries && next build",
    "fix:boundaries": "node scripts/check-boundaries.js --fix",
    "preflight": "node scripts/preflight.js",
    "preflight:sc": "node scripts/preflight.js --sc-validate",
    "predeploy": "node scripts/preflight.js",
    "analyze": "ANALYZE=true next build",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "claude:start": "git status && pnpm check:boundaries",
    "claude:implement": "pnpm create:feature",
    "claude:validate": "pnpm check:boundaries && pnpm typecheck && pnpm test",
    "claude:complete": "pnpm validate:all",
    "sc:start": "git status && pnpm check:boundaries",
    "sc:feature": "pnpm create:feature",
    "sc:boundaries": "pnpm check:boundaries",
    "sc:analyze": "pnpm check:features",
    "sc:test": "pnpm test",
    "sc:refactor": "pnpm fix:boundaries",
    "sc:validate": "pnpm validate:all",
    "sc:plan": "echo 'Planning session initiated'",
    "sc:implement": "pnpm claude:implement",
    "sc:review": "pnpm typecheck && pnpm lint",
    "sc:optimize": "pnpm analyze",
    "sc:debug": "pnpm test:unit:ui",
    "sc:business-panel": "echo 'Business analysis mode activated'",
    "sc:parallel": "node scripts/setup.js --sc-parallel",
    "sc:mcp": "echo 'MCP-First mode: Context7, Sequential, Morphllm, Serena, Playwright'"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.45.0",
    "next": "14.2.31",
    "react": "^18",
    "react-dom": "^18",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^14.2.31",
    "@playwright/test": "^1.48.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^14.3.0",
    "@testing-library/user-event": "^14.5.0",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@vitejs/plugin-react": "^4.3.0",
    "autoprefixer": "^10.4.19",
    "eslint": "^8",
    "eslint-config-next": "14.2.31",
    "jsdom": "^26.1.0",
    "playwright": "^1.48.0",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.3",
    "typescript": "^5",
    "vitest": "^1.6.0"
  },
  "pnpm": {
    "overrides": {
      "esbuild@<=0.24.2": ">=0.25.0",
      "next@<14.2.32": ">=14.2.32"
    }
  }
}