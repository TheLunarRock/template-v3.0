{
  "extends": [
    "next/core-web-vitals",
    "@typescript-eslint/recommended"
  ],
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint", "sonarjs", "security"],
  "rules": {
    "react/display-name": "off",
    
    // ğŸ”´ Critical: anyå‹ã‚’å®Œå…¨ç¦æ­¢
    "@typescript-eslint/no-explicit-any": "error",
    "@typescript-eslint/no-unsafe-assignment": "error",
    "@typescript-eslint/no-unsafe-member-access": "error",
    "@typescript-eslint/no-unsafe-call": "error",
    "@typescript-eslint/no-unsafe-return": "error",
    "@typescript-eslint/no-unsafe-argument": "error",
    
    // ğŸ”´ Critical: console.logæœ¬ç•ªç¦æ­¢
    "no-console": "error",
    
    // ğŸŸ¡ Important: ã‚³ãƒ¼ãƒ‰å“è³ªå‘ä¸Š
    "@typescript-eslint/no-unused-vars": ["error", { "argsIgnorePattern": "^_" }],
    "@typescript-eslint/no-non-null-assertion": "error",
    "@typescript-eslint/prefer-nullish-coalescing": "error",
    "@typescript-eslint/prefer-optional-chain": "error",
    
    // ğŸ”´ Critical: React hooks violations
    "react-hooks/rules-of-hooks": "error",
    "react-hooks/exhaustive-deps": "error",
    
    // ğŸŸ¡ Important: Import/Exportè¦å‰‡
    "import/no-default-export": "off",
    "@typescript-eslint/consistent-type-imports": "error",
    
    // ğŸ”´ 95%å“è³ª: è¤‡é›‘æ€§åˆ¶å¾¡
    "sonarjs/cognitive-complexity": ["error", 10],
    "sonarjs/no-duplicate-string": ["error", 3],
    "sonarjs/no-duplicated-branches": "error",
    "sonarjs/no-identical-expressions": "error",
    "sonarjs/prefer-immediate-return": "error",
    
    // ğŸ”´ 95%å“è³ª: ã‚»ã‚­ãƒ¥ãƒªãƒ†ã‚£
    "security/detect-object-injection": "error",
    "security/detect-non-literal-regexp": "error",
    "security/detect-unsafe-regex": "error"
  },
  "overrides": [
    {
      "files": ["*.config.*", "tailwind.config.ts"],
      "rules": {
        "@typescript-eslint/no-explicit-any": "off"
      }
    }
  ]
}